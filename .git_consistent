subject:
  type: string
  required: true
  description: The subject contains succinct description of the change
  rules:
    firstLatter: lower
    dotAtEnd: false
    nonAscii: false
body:
  type: text
  default: ''
  required: false
  description: The body contains details of the change
  rules:
    firstLatter: upper
    dotAtEnd: true
    nonAscii: false
